<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <form id="post-form" method="post" action="/edit/<%= post.id %>?_method=PUT">
    <div class="form-info">
      <label>Post name_surname
        <input type="text" name="name_surname" value="<%= post.name_surname %>">
      </label>
      <label>email
        <input type="text" name="email" value="<%= post.email %>">
      </label>
    </div>
    <div class="form-text">
      <label>Post career
        <textarea name="career"><%= post.career %></textarea>
      </label>
    </div>
    <div class="form-button">
      <input type="submit" value="Submit">
    </div>
  </form>
</body>
</html>